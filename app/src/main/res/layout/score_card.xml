<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/score_card"
        android:textSize="40sp"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorAccent"
        android:fontFamily="@font/corben"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/totalOvers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/heading"
        android:textSize="25sp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/playerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalOvers"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player"
            android:textSize="25sp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/playerSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/computerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerInfo"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device"
            android:textSize="25sp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/computerSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/computerInfo"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"/>



    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:background="@color/colorPrimary"
        android:minWidth="48dip"
        android:layout_below="@id/summary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>